int[] notas = new int[4];

float total=0;
float media;

Scanner sc = new Scanner(System.in);

        System.out.println("Introduce las notas");
        
        
        for(int i =0 ; i<notas.length ; i++){
            
            notas[i] = sc.nextInt();
            total += notas[i];
           
            
        }
        
        
        media = (float)total/4;
        System.out.println("La media es de: "+media);
       
  
        
    }
}

